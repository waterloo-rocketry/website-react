{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "no-unused-vars": 1,
        "react/prop-types": 0,
        "linebreak-style": 0,
        "func-style": 0,
        "arrow-body-style": 0,
        "react/function-component-definition": 0,
        "max-len": 1,
        "indent": ["error", 2],
        "max-classes-per-file": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".jsx", ".tsx"] }],
        "react/require-default-props": 0,
        "no-undef": 0,
        "import/extensions": [
            "warn",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}